<div class="col-md-12 col-sm-12 col-xs-12">
   <div class="x_panel">
      <div class="x_title">
      <div class="page-title">
         <div class="title_left">
         <h2>Gerenciamento de Redações</h2>
         </div>
         </div>
      </div>
      <div class="clearfix"></div>
      

      <div class="container-fluid" style="overflow-x: auto; overflow-x: scroll;">
         <%= will_paginate @redaction %>
         <table  class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Redação</th>
                <th>Título da redação</th>
                <th>Forma de recebimento</th>
                <th>-</th>
      
              </tr>
            </thead>
            
              <tbody>
                <% @redaction.each do |redaction| %>
                  <tr>
                    <td><a href="javascript:void(0)" onclick="popup('<%= redaction.picture %>')">Abrir Redação</a></td>
                    <td><%= redaction.redaction_title %></td>
                    <td><%= redaction.howreceive %></td>
                    <td>
                     <%= link_to redaction, method: :delete, data: { confirm: 'Are you sure?' } do %>
                     <span class="glyphicon glyphicon-remove" aria-hidden="true" style="margin-left: 20px"></span>
                     <% end %>    
                  </td>
                  </tr>
                <% end %>
              </tbody>
         </table>
      </div>
   </div>
  </div> 
<%= will_paginate @redaction %>

