<% if @teachers.errors.any? %>
  <script>
   $(document).ready(function() {
    noty({text: ' <%= pluralize(@teachers.errors.count, "erros") %> encontrados: </br><ul><% @teachers.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
  });
  </script>
<% end %>
<div class="clearfix"></div>
 <div class="row">
   <div class="col-md-12 col-sm-12 col-xs-12">
         <div class="x_content">
            <br />

            <%= form_for @teachers, :html => { class: "form-horizontal form-label-left", id:"demo-form2"  } do |f| %>

            <div class="form-group">
               <%= f.label :name, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
               <span class="required">Nome *</span>
               <% end %> 
               <div class="col-md-6 col-sm-6 col-xs-12">
               <%= f.text_field :name, class:"date-picker form-control col-md-7 col-xs-12", type:"text", required:"required"%>
               </div>
                  </div>
               <div class="form-group">
               <%= f.label :category_id, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
               <span class="required">Categoria *</span>
               <% end %> 
               <div class="col-md-6 col-sm-6 col-xs-12">
               <%= f.select :category_id, Category.all.collect { |c| [ c.name, c.id ] }, { include_blank: true } , { class: "form-control" }%>
               </div>
                  </div>
               <div class="ln_solid"></div>
                  <div class="form-group">
                     <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <%= f.submit "Salvar", type:"submit", class:"btn btn-success" %>
                        <%= link_to "Voltar", teachers_path, class:"btn btn-primary"%>
                     </div>
                  </div>
               </div>
            <% end %>
   </div>
</div>
