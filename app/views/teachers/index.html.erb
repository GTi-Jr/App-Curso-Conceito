<div class="col-md-12 col-sm-12 col-xs-12">
   <div class="x_panel">
      <div class="x_title">
      <div class="page-title">
         <div class="title_left">
         <h2>Gerenciamento de Professores</h2>
         </div>
         <div class="title_right">
         <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
               <input class="form-control" id="inputSuccess5" onkeyup="searchTeachers(this.value);" class="form-control" placeholder="Procurar por nome">
            </div>
         </div>
      </div>
      </div>
      </div>
         <div class="clearfix"></div>
      

      <div class="container-fluid" style="overflow-x: auto; overflow-x: scroll;">
         <%= will_paginate @teachers %>
         <%= link_to 'Novo Professor', new_teacher_path,  class:"btn btn-primary" %>
         <table id="mytable", class="table table-striped table-bordered">
            <thead>
               <tr>
                  <th>Nome</th>
                  <th>Categoria</th>
                  <th>Criado em</th>
                  <th>Configurações</th>
               </tr>
            </thead>
            <tbody id="tablerowteachers">
               <% @teachers.each do |teachers| %>
               <tr>
                  <td><%= teachers.name%></td>
                  <td><%= teachers.category.name%></td>
                  <td><%= teachers.created_at.strftime("%d/%m/%Y %H:%M:%S")%></td>
                  <td colspan="3"><%= link_to  edit_teacher_path(teachers) do %>
                     <span class="glyphicon glyphicon-wrench" aria-hidden="true" style="margin-left: 5px"></span>
                     <% end %> <i style="margin-left:3px"></i>
                     <%= link_to teachers, method: :delete, data: { confirm: 'Are you sure?' } do %>
                     <span class="glyphicon glyphicon-remove" aria-hidden="true" style="margin-left: 20px"></span>
                     <% end %>      
                  </td>
               </tr>
               <%end%>
            </tbody>
         </table>
      </div>
   </div>
</div>
<%= will_paginate @teachers %>