 <% if @contents.errors.any? %>
  <script>
   $(document).ready(function() {
    noty({text: '<%= pluralize(@contents.errors.count, "erros") %> encontrados: </br><ul><% @contents.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
  });
  </script>
<% end %>
<div class="clearfix"></div>
<div class="row">
   <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_content">
         <br />
         <%= form_for @contents, :html => { class:"form-horizontal form-label-left", id:"demo-form2"  } do |f| %>
         <div class="form-group">
            <%= f.label :name, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
            <span class="required">Titulo *</span>
            <% end %> 
            <div class="col-md-6 col-sm-6 col-xs-12">
               <%= f.text_field :title, class:"form-control col-md-7 col-xs-12", type:"text", required:"required"%>
            </div>
         </div>
         <div class="form-group">
            <%= f.label :category_id, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
            <span class="required">Sub Categoria *</span>
            <% end %> 
            <div class="col-md-6 col-sm-6 col-xs-12">
               <%= f.collection_select :subcategory_id, Subcategory.all, :id, :name, { include_blank: true } , { class: "form-control" }%>
            </div>
         </div>
         <div class="form-group">
            <%= f.label :name, class:"control-label col-md-3 col-sm-3 col-xs-12" do %>
            <span class="required">Arquivo *</span>
            <% end %> 
            <div class="col-md-6 col-sm-6 col-xs-12">
               <%= f.file_field :file, multiple: true, class:"date-picker form-control col-md-7 col-xs-12" %>
            </div>
         </div>
         <div class="ln_solid"></div>
         <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
               <%= f.submit "Cadastrar", type:"submit", class:"btn btn-success" %>
               <%= link_to "Voltar", contents_path, class:"btn btn-primary"%>
            </div>
         </div>
      </div>
      <% end %>
   </div>
</div>