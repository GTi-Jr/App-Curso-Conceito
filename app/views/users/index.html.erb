
<div class="col-md-12 col-sm-12 col-xs-12">
   <div class="x_panel">
      <div class="x_title">
         <h2>Gerenciamento de Alunos</h2>
         <div class="clearfix"></div>
      </div>
      <div class="x_content">
         <table id="datatable-buttons", class="table table-striped table-bordered">
            <thead>
               <tr>
                  <th>Nome</th>
                  <th>Email</th>
                  <th>Data de nascimento</th>
                  <th>Contato</th>
                  <th>Cadastrado em</th>
                  <th>Editar</th>
                  <th>Apagar</th>
               </tr>
            </thead>
            <tbody>
               <% @users.each do |users| %>
               <tr>
                  <td><%= users.name%></td>
                  <td><%= users.email%></td>
                  <td><%= users.birthday.strftime("%d/%m/%Y")%></td>
                  <td><%= users.phone_number%></td>
                  <td><%= users.created_at.strftime("%d/%m/%Y %H:%M:%S")%></td>
                  <td><%= link_to 'Editar',  edit_user_path(users), class:"btn btn-default" %></td>
                  <td><%= link_to 'Apagar', users, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default"  %></td>
               </tr>
               <%end%>
            </tbody>
         </table>
         
      </div>
   </div>
<%= link_to 'Novo aluno', new_user_path,  class:"btn btn-success" %>
</div>
