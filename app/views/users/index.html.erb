
<div class="col-md-12 col-sm-12 col-xs-12">
   <div class="x_panel">
      <div class="x_title">
         <h2>Gerenciamento de Alunos</h2>
         <div class="clearfix"></div>
      </div>
      <div class="x_content">
      <%= will_paginate @users %>
         <table id="mytable", class="table table-striped table-bordered">
         <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                  <div class="input-group">
                    <input type="text" id="myInput" onkeyup="myFunction()" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            <thead>
               <tr>
                  <th>-</th>
                  <th>Nome</th>
                  <th>Email</th>
                  <th>Data de nascimento</th>
                  <th>Contato</th>
                  <th>Cadastrado em</th>
                  <th>Settings</th>
               </tr>
            </thead>
            <tbody>
               <% @users.each do |users| %>
               <tr>
                  <td><%= image_tag users.photo, class:"circular"%> </td> 
                  <td><%= users.name%></td>
                  <td><%= users.email%></td>
                  <td><%= users.birthday.strftime("%d/%m/%Y")%></td>
                  <td><%= users.phone_number%></td>
                  <td><%= users.created_at.strftime("%d/%m/%Y %H:%M:%S")%></td>
                  <td colspan="3"><%= link_to  edit_user_path(users) do %>
                        <span class="glyphicon glyphicon-wrench" aria-hidden="true" style="margin-left: 5px"></span>
                  <% end %> <i style="margin-left:3px"></i>
                  <%= link_to users, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <span class="glyphicon glyphicon-remove" aria-hidden="true" style="margin-left: 20px"></span>
                  <% end %>      
                  </td>
               </tr>
               <%end%>
               
            </tbody>
         </table>

      </div>
   </div>
</div>

<%= will_paginate @users %>
