<div class="col-md-12 col-sm-12 col-xs-12">
   <div class="x_panel">
      <div class="x_title">
         <h2>Gerenciamento de Subcategorias</h2>
         <div class="clearfix"></div>
      </div>
      <div class="x_content">
         <%= will_paginate @subcategories %>
         <table id="mytable", class="table table-striped table-bordered">
             <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                  <div class="input-group">
                    <input class="form-control" id="inputSuccess5" onkeyup="searchSubCategory(this.value);" class="form-control" placeholder="Procurar">
                  </div>
                </div>
              </div>
            <thead>
               <tr>
                  <th>Nome</th>
                  <th>Categoria</th>
                  <th>Criado em</th>
                  <th>Configurações</th>
               </tr>
            </thead>
            <tbody id="tablerowsub_category">
               <% @subcategories.each do |sub_categories| %>
               <tr>
                  <td><%= sub_categories.name%></td>
                  <td><%= sub_categories.category.name%></td>
                  <td><%= sub_categories.created_at.strftime("%d/%m/%Y %H:%M:%S")%></td>
                  <td colspan="3"><%= link_to  edit_subcategory_path(sub_categories) do %>
                     <span class="glyphicon glyphicon-wrench" aria-hidden="true" style="margin-left: 5px"></span>
                     <% end %> <i style="margin-left:3px"></i>
                     <%= link_to sub_categories, method: :delete, data: { confirm: 'Are you sure?' } do %>
                     <span class="glyphicon glyphicon-remove" aria-hidden="true" style="margin-left: 20px"></span>
                     <% end %>      
                  </td>
               </tr>
               <%end%>
               <!--<td colspan="7" id="error" hidden="" >Nenhum cadastro encontrado</td>-->
            </tbody>
         </table>
      </div>
   </div>
   <%= link_to 'Nova Subcategoria', new_subcategory_path,  class:"btn btn-success" %>
</div>
<%= will_paginate @subcategories %>