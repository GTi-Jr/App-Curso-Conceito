<div class="col-md-12 col-sm-12 col-xs-12">
   <div class="x_panel">
      <div class="x_title">
         <h2>Gerenciamento de Sub Matérias</h2>
         <div class="clearfix"></div>
      </div>
      <%= link_to 'Nova Subcategoria', new_subcategory_path,  class:"btn btn-primary" %>
      <div class="x_content">
         <%= will_paginate @subcategories %>
         <table id="mytable", class="table table-striped table-bordered">
             <div class="title_right">
                <div class=" form-group pull-right top_search">
                  <div class="input-group">
                    <input class="form-control" id="inputSuccess5" onkeyup="searchsubcategory(this.value);" placeholder="Procurar por nome">
                  </div>
                </div>
              </div>
            <thead>
               <tr>
                  <th>Nome</th>
                  <th>Categoria</th>
                  <th>Criado em</th>
                  <th>Configurações</th>
               </tr>
            </thead>
            <tbody id="tablerowsubcategory">
               <% @subcategories.each do |subcategories| %>
               <tr>
                  <td><%= subcategories.name%></td>
                  <td><%= subcategories.category.name%></td>
                  <td><%= subcategories.created_at.strftime("%d/%m/%Y %H:%M:%S")%></td>
                  <td colspan="3"><%= link_to  edit_subcategory_path(subcategories) do %>
                     <span class="glyphicon glyphicon-wrench" aria-hidden="true" style="margin-left: 5px"></span>
                     <% end %> <i style="margin-left:3px"></i>
                     <%= link_to subcategories, method: :delete, data: { confirm: 'Are you sure?' } do %>
                     <span class="glyphicon glyphicon-remove" aria-hidden="true" style="margin-left: 20px"></span>
                     <% end %>      
                  </td>
               </tr>
               <%end%>
            </tbody>
         </table>
      </div>
   </div>
   <div class="x_panel">
   <%= link_to 'Nova Subcategoria', new_subcategory_path,  class:"btn btn-primary" %>
</div>
</div>
<%= will_paginate @subcategories %>